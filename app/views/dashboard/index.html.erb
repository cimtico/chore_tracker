<h1>Dashboard for <%= @child.name %></h1>

<ul>
  <li>
    <%= link_to "Chore Entries", chore_entries_path %>
  </li>
  <li>
    <%= link_to "Manage Expenses", expenses_path %>
  </li>
  <li>
    <%= link_to "Manage Chores", chores_path %>
  </li>
</ul>

<div>
  <h3>Total</h3>
  <table>
    <thead>
      <tr>
        <td>Wallet</td>
        <td>Earned</td>
        <td>Expenses</td>
        <td>Total</td>
      </tr>
    </thead>
    <tbody>
      <td><%= @child.cutoff_amount %></td>
      <td><%= @total_earned %></td>
      <td><%= @total_expenses %></td>
      <td><%= @child.cutoff_amount + @total_earned - @total_expenses %></td>
    </tbody>
  </table>
  <br />
  <div>
    <strong>Last cutoff: </strong> <%= @child.last_cutoff_at.to_date %>
  </div>
</div>

<div>
  <h3>This week</h3>
  <table>
    <thead>
      <tr>
        <td>Completed</td>
        <td>Earned</td>
        <td>Expenses</td>
      </tr>
    </thead>
    <tbody>
      <td><%= @week_chore_entries.size %></td>
      <td><%= @week_chore_entries.sum(:value) %></td>
      <td><%= @week_expenses %></td>
    </tbody>
  </table>
</div>
