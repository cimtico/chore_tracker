<% content_for :heading, "Expenses" %>

<p style="color: green"><%= notice %></p>


<%= link_to "New expense", new_expense_path, class: "btn btn-primary" %>

<div id="expenses">
  <%= paginate @expenses %>
  <% @expenses.each do |expense| %>
    <%= render expense %>
    <p>
      <%= link_to "Show this expense", expense %>
    </p>
  <% end %>
  <%= paginate @expenses %>
</div>

<%= link_to "New expense", new_expense_path, class: "btn btn-primary" %>